<MyLayout>
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height

        Splitter:
            sizable_from:"bottom"
            Button:
                text:'Hello World1'
                font_size:32

        Label:
            text:"This is some text"
            font_size:38


        Splitter:
            sizable_from:"top"
            Button:
                text:"Hello World2"
                font_size:42
        GridLayout:
            cols:2
            Button:
                text:'Left'
                
            Splitter:
                sizable_from:"left"
                Button:
                    text:'Right'
